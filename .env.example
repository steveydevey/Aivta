# Aivta Environment Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=postgresql://aivta_user:aivta_password@database:5432/aivta
POSTGRES_DB=aivta
POSTGRES_USER=aivta_user
POSTGRES_PASSWORD=aivta_password

# LLM Configuration
# Add your OpenAI API key here
OPENAI_API_KEY=your_openai_api_key_here
OLLAMA_HOST=http://ollama:11434

# Service Configuration
AI_AGENT_HOST=ai-agent
AI_AGENT_PORT=8000
TEXT_GAME_HOST=text-game
TEXT_GAME_PORT=8080

# Logging Configuration
LOG_LEVEL=INFO

# Game Configuration
GAME_TYPE=adventure
MAX_SESSIONS=100
SESSION_TIMEOUT=3600

# Development Configuration
DEBUG=false
TESTING=false

# Optional: Docker Compose Profiles
# Uncomment the profiles you want to activate
# COMPOSE_PROFILES=local-llm,monitoring

# Security (change these in production)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Performance Tuning
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2